<div class="signup_form">

  <form action="/signup" method="POST" class="signup_form">
    <input type="text" name="user[name]" placeholder="enter name">
    <input type="text" name="user[username]" placeholder="enter username">
    <input type="text" name="user[boardtype]" placeholder="what kind of board?">
