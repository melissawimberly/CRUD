<!-- edits one skatelog -->


<div class="container">
  <h2>Tell Your Skate Community All About Your Sesh!</h2>
  <form class="new_post" action="/skatelogs/<%=@skatelog.id%>" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="skatelog[user_id]" value="<%=current_user.id%>">

    <input type="text" name="skatelog[title]" placeholder="re-name your sesh">
    <input type="text" name="skatelog[seshtime]" placeholder="new sesh length">
    <input type="text" name="skatelog[tricks]" placeholder="what was your best trick?">
    <input type="text" name="skatelog[description]" placeholder="describe your sesh">
    <input type="submit" value="Post Your Sesh!">
  </form>
</div>

